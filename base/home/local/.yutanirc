#!/bin/sh

# Start wallpaper
cd ~/Desktop
file-browser --wallpaper &
cd ~

# Start toast daemon
toastd --really # Daemonizes

# If we haven't shown the tutorial yet, show it.
if not stat -q ~/.tutorial-shown then show-tutorial.sh

# Login toast notifications
show-toasts.krk &

# Replace us with the panel
exec panel --really
